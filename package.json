{
  "name": "reference-repository",
  "version": "1.0.0-beta.0",
  "description": "",
  "homepage": "http://tiagoporto.github.io/reference-repository",
  "keywords": [],
  "engines": {
    "node": ">= 20",
    "npm": ">= 10"
  },
  "author": {
    "name": "Tiago Porto",
    "url": "http://tiagoporto.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tiagoporto/reference-repository.git"
  },
  "main": "./dist/reference-repository.umd.js",
  "module": "./dist/reference-repository.es.js",
  "typings": "./dist/reference-repository.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "",
    "check-docs": "remark --frail --use validate-links --use remark-lint-no-dead-urls --use remark-lint-no-url-trailing-slash .",
    "lint": "eslint --ext js,jsx,ts,tsx,md,mdx . --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "checks": "npm run check-docs && npm run check-formatting && npm run check-typing && npm run lint",
    "check-typing": "tsc --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:mutation": "stryker run --reporters html",
    "test:mutation-report": "stryker run --reporters dashboard",
    "check-formatting": "prettier --check --ignore-unknown '**/*'",
    "formatting:fix": "npm run check-formatting -- --write",
    "cover": "npm test -- --coverage",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls",
    "tests": "npm run lint && npm run check-types && npm run coveralls && npm run test:mutation-report",
    "types": "tsc --emitDeclarationOnly",
    "build:site": "",
    "deploy": "npm run build:site",
    "prepublishOnly": "rm -rf dist && rollup -c && npm run types",
    "postpublish": "npm run tag && git push --tags",
    "tag": "git tag v$npm_package_version",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.8.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-jsdoc": "^48.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "remark-cli": "^12.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-lint-no-url-trailing-slash": "^3.0.1",
    "remark-validate-links": "^13.0.0",
    "typescript": "^5.3.3"
  }
}

{
  "name": "reference-repository",
  "version": "1.0.0-beta.0",
  "description": "",
  "homepage": "http://tiagoporto.github.io/reference-repository",
  "keywords": [],
  "author": {
    "name": "Tiago Porto",
    "url": "http://tiagoporto.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tiagoporto/reference-repository.git"
  },
  "main": "./dist/reference-repository.umd.js",
  "module": "./dist/reference-repository.es.js",
  "typings": "./dist/reference-repository.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "",
    "check-links": "remark --frail --use validate-links .",
    "check-urls": "remark --frail --use remark-lint-no-dead-urls .",
    "lint": "eslint --ext js,jsx,ts,tsx,md,mdx . --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "checks": "npm run check-formatting && npm run check-typing && npm run lint",
    "check-typing": "tsc --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:mutation": "stryker run --reporters html",
    "test:mutation-report": "stryker run --reporters dashboard",
    "check-formatting": "prettier --check --ignore-unknown '**/*'",
    "formatting:fix": "npm run check-formatting -- --write",
    "cover": "npm test -- --coverage",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls",
    "tests": "npm run lint && npm run check-types && npm run coveralls && npm run test:mutation-report",
    "types": "tsc --emitDeclarationOnly",
    "build:site": "",
    "deploy": "npm run build:site && gh-pages -d site",
    "prepublishOnly": "rm -rf dist && rollup -c && npm run types",
    "postpublish": "npm run tag && git push --tags",
    "tag": "git tag v$npm_package_version",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-markdown": "^2.0.0",
    "eslint-plugin-mdx": "^1.11.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "eslint-plugin-unicorn": "^29.0.0",
    "gh-pages": "^3.1.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-validate-links": "^10.0.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "echo 'Running checks...' && npm run checks"
    }
  }
}
